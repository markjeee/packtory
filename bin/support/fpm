#!/usr/bin/env bash

packtory_dir=$(cd "$(dirname $0)/../../"; pwd)
packtory_bundle_path=$packtory_dir/bundle

if [ -d "$packtory_bundle_path" ]; then
    export PACKTORY_BUNDLE_PATH="$packtory_bundle_path"
    fpm_ruby=$(cd "$(dirname $0)"; pwd)/fpm_vendor_ruby
else
    fpm_ruby="$(which fpm)"

    if [ -z "$fpm_ruby" ]; then
        fpm_ruby="fpm"
    fi
fi

$fpm_ruby "$@"
